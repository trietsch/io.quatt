  "images": {
    "small": "{{driverAssetsPath}}/images/small.png",
    "large": "{{driverAssetsPath}}/images/large.png",
    "xlarge": "{{driverAssetsPath}}/images/xlarge.png"
  },
  "settings": [
    {
      "id": "ipAddress",
      "type": "text",
      "label": {
        "en": "Quatt IP address (override)",
        "nl": "Quatt IP-adres (override)"
      },
      "hint": {
        "en": "Override the IP address of the Quatt heat pump. Note that if your Quatt CiC cannot be found at this IP address, automatic discovery will be attempted to find your Quatt CiC.",
        "nl": "Overschrijf het IP-adres van de Quatt warmtepomp. Let op dat als je Quatt CiC niet gevonden kan worden op dit IP-adres, er een poging gedaan wordt om je Quatt CiC automatisch te vinden."
      },
      "placeholder": {
        "en": "e.g. 192.168.1.123",
        "nl": "bv 192.168.1.123"
      }
    },
    {
      "id": "updateInterval",
      "type": "number",
      "label": {
        "en": "Data update interval (seconds)",
        "nl": "Data update interval (seconden)"
      },
      "hint": {
        "en": "How often to refresh data from the Quatt CiC. The Quatt CiC updates data every second. Minimum: 1 second, Maximum: 60 seconds.",
        "nl": "Hoe vaak de data van de Quatt CiC ververst moet worden. De Quatt CiC werkt de data elke seconde bij. Minimum: 1 seconde, Maximum: 60 seconden."
      },
      "value": 5,
      "min": 1,
      "max": 60,
      "units": {
        "en": "seconds",
        "nl": "seconden"
      }
    }
  ],
  "pair": [
    {
      "id": "list_devices",
      "template": "list_devices",
      "navigation": {
        "next": "add_devices"
      }
    },
    {
      "id": "manual_pair",
      "$template": "manual_pair"
    },
    {
      "id": "error",
      "$template": "error",
      "navigation": {
        "prev": "manual_pair"
      }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    },
    {
      "id": "done",
      "template": "done"
    }
  ]
}
